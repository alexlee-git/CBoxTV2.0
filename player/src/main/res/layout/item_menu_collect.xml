<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_12px"
        android:src="@drawable/menu_group_collect_unfocus"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="@dimen/width_430px"
        android:layout_height="@dimen/height_106px"
        android:paddingLeft="@dimen/width_99px"
        android:paddingRight="@dimen/width_24px"
        android:gravity="left|center_vertical"
        android:background="@color/color_transparent"
        android:text="收藏"
        android:textColor="@color/color_font"
        android:textSize="16sp"
        android:visibility="visible"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <ImageView
        android:layout_width="@dimen/width_385px"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_group_collect_item_line"
        android:layout_gravity="bottom"
        />

</FrameLayout>