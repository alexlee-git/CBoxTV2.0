<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clipChildren="false"
             android:clipToPadding="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_406px"
        android:layout_marginTop="@dimen/height_674px"
        android:background="@drawable/player_seekbar_area_bg"/>

    <TextView
        android:id="@+id/seekbar_program_name"
        android:layout_width="@dimen/width_773px"
        android:layout_height="@dimen/height_47px"
        android:layout_marginStart="@dimen/width_120px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_950px"
        android:ellipsize="end"
        android:gravity="center_vertical|left|start"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#ededed"
        android:textSize="@dimen/height_26px"/>

    <ImageView
        android:id="@+id/image_hint"
        android:layout_width="@dimen/width_234px"
        android:layout_height="@dimen/height_34px"
        android:layout_marginStart="@dimen/width_120px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_860px"
        android:scaleType="fitXY"
        android:src="@drawable/come_menu"/>

    <TextView
        android:id="@+id/seekbar_current_time"
        android:layout_width="@dimen/width_150px"
        android:layout_height="@dimen/height_50px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_950px"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#ededed"
        android:textSize="@dimen/height_26px"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/seebar_left_time"
        android:layout_width="@dimen/width_131px"
        android:layout_height="@dimen/height_38px"
        android:layout_marginStart="@dimen/width_1519px"
        android:layout_marginLeft="@dimen/width_1519px"
        android:layout_marginTop="@dimen/height_953px"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#ffffff"
        android:textSize="@dimen/height_26px"
        android:textStyle="bold"/>
    <SeekBar
        android:id="@+id/player_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_120px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_904px"
        android:layout_marginEnd="@dimen/width_120px"
        android:layout_marginRight="@dimen/width_120px"
        android:maxHeight="@dimen/height_24px"
        android:minHeight="@dimen/height_24px"
        android:progressDrawable="@drawable/player_seekbar_progress_drawable_blue"
        android:thumb="@drawable/seekbar_thumb"/>

    <ImageView
        android:id="@+id/img_time_line"
        android:layout_width="@dimen/width_10px"
        android:layout_height="@dimen/height_26px"
        android:layout_marginStart="@dimen/width_1656px"
        android:layout_marginLeft="@dimen/width_1656px"
        android:layout_marginTop="@dimen/height_959px"
        android:gravity="center"
        android:src="@drawable/time_line"/>

    <TextView
        android:id="@+id/seebar_right_time"
        android:layout_width="@dimen/width_127px"
        android:layout_height="@dimen/height_38px"
        android:layout_marginStart="@dimen/width_1673px"
        android:layout_marginLeft="@dimen/width_1673px"
        android:layout_marginTop="@dimen/height_953px"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#eeeeee"
        android:textSize="@dimen/height_26px"/>

    <ImageView
        android:id="@+id/img_seek_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_34px"
        android:layout_marginStart="@dimen/width_1470px"
        android:layout_marginLeft="@dimen/width_1470px"
        android:layout_marginTop="@dimen/height_957px"
        android:gravity="center_vertical|right"
        android:src="@drawable/seek_pause"/>

    <FrameLayout
        android:id="@+id/seekbar_down_arrow_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/width_58px"
            android:layout_height="@dimen/height_25px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_1040px"
            android:src="@drawable/player_seekbar_down_arrow"/>

    </FrameLayout>
</FrameLayout>


