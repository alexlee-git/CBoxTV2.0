<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_345px"
    android:background="@drawable/dialog_bg"
>

    <TextView
        android:id="@+id/notification_view"
        android:layout_width="@dimen/width_900px"
        android:layout_height="@dimen/height_45px"
        android:layout_marginTop="@dimen/height_70px"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/height_36px"
    />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="@dimen/width_900px"
        android:layout_height="@dimen/height_45px"
        android:layout_marginTop="@dimen/height_120px"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/height_36px"
    />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/ensure"
            android:layout_width="@dimen/width_200px"
            android:layout_height="@dimen/height_60px"
            android:layout_marginTop="@dimen/height_216px"
            android:background="@drawable/tip_btn_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/height_36px"/>

        <TextView
            android:id="@+id/unensure"
            android:layout_width="@dimen/width_200px"
            android:layout_height="@dimen/height_60px"
            android:layout_marginTop="@dimen/height_216px"
            android:layout_toRightOf="@+id/ensure"
            android:background="@drawable/tip_btn_background"
            android:focusable="true"
            android:layout_marginLeft="@dimen/width_40px"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="继续观看"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/height_36px"
            android:layout_marginStart="@dimen/width_40px"
            android:layout_toEndOf="@+id/ensure"/>
    </RelativeLayout>


</RelativeLayout>