<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_item"
    android:layout_width="@dimen/width_288px"
    android:layout_height="@dimen/height_600px"
    android:layout_marginTop="@dimen/height_10px"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true">


    <ImageView
        android:id="@+id/item_detail_img"
        android:layout_width="@dimen/width_240px"
        android:layout_height="@dimen/height_360px"
        android:layout_marginLeft="@dimen/width_33px"
        android:layout_marginRight="@dimen/width_33px"
        android:layout_marginTop="@dimen/height_33px"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/focus_240_360" />

    <!--android:layout_width="@dimen/width_268px"-->
    <!--android:layout_height="@dimen/height_400px"-->
    <!---->
    <ImageView
        android:id="@+id/item_detail_img_foused"

        android:layout_width="@dimen/width_306px"
        android:layout_height="@dimen/height_426px"

        android:focusable="false"
        android:scaleType="fitXY"
        android:background="@drawable/pos_focus_1"
        android:visibility="invisible" />

    <!--android:layout_marginLeft="@dimen/width_10px"-->
    <!--android:layout_marginRight="@dimen/width_10px"-->
    <!--android:layout_marginTop="@dimen/height_10px"-->
    <TextView
        android:id="@+id/item_detail_tv_peried"
        android:layout_width="@dimen/width_230px"
        android:layout_height="@dimen/height_30px"
        android:layout_marginLeft="@dimen/width_30px"
        android:layout_marginRight="@dimen/width_30px"
        android:layout_marginTop="@dimen/height_350px"
        android:focusable="false"
        android:gravity="center_vertical"
        android:text="全集20集"
        android:textColor="@color/colorPosterBottomTitleText"
        android:textSize="@dimen/height_20px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_detail_tv_name"
        android:layout_width="@dimen/width_240px"
        android:layout_height="@dimen/height_60px"
        android:layout_marginLeft="@dimen/width_33px"
        android:layout_marginRight="@dimen/width_33px"
        android:layout_marginTop="@dimen/height_400px"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="电影名称"
        android:textColor="@color/colorPosterBottomTitleText"
        android:textSize="@dimen/height_24px" />

</FrameLayout>


