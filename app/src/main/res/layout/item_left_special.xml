<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topic_container"
    android:layout_width="@dimen/width_322px"
    android:layout_height="@dimen/width_100px"
    android:focusable="true">

    <TextView
        android:id="@+id/topic_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100px"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="@dimen/width_50px"
        android:paddingRight="@dimen/width_20px"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/height_30px"/>

</FrameLayout>



