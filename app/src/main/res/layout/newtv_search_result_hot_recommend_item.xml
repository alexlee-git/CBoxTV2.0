<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <FrameLayout
        android:id="@+id/ai_sou_focus_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_pos_background_27px"
        >
        <ImageView
            android:id="@+id/id_hot_recommend_imageView_poster"
            android:layout_width="@dimen/width_240px"
            android:layout_height="@dimen/height_360px"
            android:scaleType="fitXY"
            android:focusable="false" />
    </FrameLayout>

    <TextView
        android:id="@+id/id_hot_recommend_title"
        style="@style/StyleSearchResultListItemTitle"
        android:layout_width="@dimen/width_226px"
        android:layout_height="@dimen/height_33px"
        android:layout_marginBottom="@dimen/height_21px"
        android:layout_marginLeft="@dimen/width_39px"
        android:layout_marginRight="@dimen/width_24px"
        android:layout_marginTop="@dimen/height_401px"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="left"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" />
</FrameLayout>