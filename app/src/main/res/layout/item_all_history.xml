<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false">

    <!-- 1 -->
    <FrameLayout
        android:id="@+id/id_module_view"
        android:layout_width="@dimen/width_306px"
        android:layout_height="@dimen/height_483px"
        android:layout_below="@id/id_module_8_title"
        android:layout_marginLeft="@dimen/_width_18px"
        android:layout_marginTop="@dimen/height_10px"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:tag="cell_008_1">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/width_240px"
            android:layout_height="@dimen/height_360px"
            android:layout_marginLeft="@dimen/width_33px"
            android:layout_marginTop="@dimen/height_33px"
            android:scaleType="fitXY"
            android:tag="tag_poster_image"/>

        <ImageView
            android:id="@+id/iv_focus"
            android:layout_width="@dimen/width_306px"
            android:layout_height="@dimen/height_426px"
            android:background="@drawable/pos_zui"
            android:tag="tag_imageview"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/ModulePosterBottomTitleStyle"
            android:layout_width="@dimen/width_240px"
            android:layout_height="@dimen/height_32px"
            android:layout_marginLeft="@dimen/width_33px"
            android:layout_marginTop="@dimen/height_400px"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:tag="tag_poster_title"/>



    </FrameLayout>
</RelativeLayout>