<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topic_center_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_100px"
    android:focusable="true">

    <TextView
        android:id="@+id/topic_center_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100px"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="@dimen/height_48px"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/height_30px" />

    <ImageView
        android:id="@+id/topic_center_item_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:src="@drawable/seek_play"
        android:visibility="gone" />

</FrameLayout>



