<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_params"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="@dimen/height_15px"
    android:clipToPadding="false"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/nav_frame"
        android:layout_width="@dimen/width_220px"
        android:layout_height="@dimen/height_220px"
        android:background="@drawable/circle_no"
        android:layout_marginLeft="@dimen/width_60px"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/nav_img"
            android:layout_width="@dimen/width_220px"
            android:layout_height="@dimen/height_220px"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

    </FrameLayout>


    <View
        android:layout_width="@dimen/width_220px"
        android:layout_height="@dimen/height_7px" />

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="@dimen/width_220px"
        android:layout_height="@dimen/height_32px"
        android:gravity="center"
        android:text="搜索"
        android:layout_marginLeft="@dimen/width_60px"
        android:textColor="@color/colorWhite_50"
        android:textSize="@dimen/height_28px" />

</LinearLayout>