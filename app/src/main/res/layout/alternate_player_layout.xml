<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tv.newtv.cboxtv.player.view.VideoFrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </tv.newtv.cboxtv.player.view.VideoFrameLayout>

    <TextView
        android:id="@+id/alter_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alter_title"
        android:layout_marginStart="@dimen/width_15px"
        android:layout_marginLeft="@dimen/width_15px"
        android:layout_marginBottom="@dimen/height_15px"
        android:textColor="@android:color/white"
        android:textSize="@dimen/height_24px"/>

    <TextView
        android:id="@+id/alter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_15px"
        android:layout_marginLeft="@dimen/width_15px"
        android:layout_marginBottom="@dimen/height_15px"
        android:textColor="@android:color/white"
        android:textSize="@dimen/height_28px"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/alter_big_screen"
        android:layout_width="@dimen/width_135px"
        android:layout_height="@dimen/height_32px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/width_15px"
        android:src="@drawable/big_screen"/>



</RelativeLayout>