<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="@dimen/width_152px"
             android:layout_height="@dimen/height_42px"
             android:layout_marginEnd="@dimen/width_15px"
             android:focusable="true"
             android:descendantFocusability="blocksDescendants"
             android:layout_marginStart="@dimen/width_15px">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:duplicateParentState="true"
        android:includeFontPadding="true"
        android:scaleType="fitCenter"
        android:singleLine="true"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/menu_text_color"
        android:textSize="@dimen/height_29px"/>

    <tv.newtv.cboxtv.views.custom.RecycleImageView
        android:visibility="gone"
        android:duplicateParentState="true"
        android:id="@+id/title_icon_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_1px"/>
</FrameLayout>
