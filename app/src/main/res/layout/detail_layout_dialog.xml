<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog">

        <TextView
            android:id="@+id/pay_tv_success1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_166px"
            android:gravity="center_horizontal"
            android:text="您支付成功"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/height_36px" />

        <RelativeLayout
            android:id="@+id/pay_tv_success"
            android:layout_width="@dimen/width_240px"
            android:layout_height="@dimen/height_90px"
            android:layout_below="@+id/pay_tv_success1"
            android:layout_centerHorizontal="true"
            android:layout_margin="55px"
            android:background="@drawable/fouse_k"
            android:focusable="true"
            android:padding="15px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pay_success"
                android:focusable="false"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="确定"
                android:textColor="#333333"
                android:textSize="@dimen/height_38px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pay_tv_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_tv_success"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="3s后跳转"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/height_36px" />
    </RelativeLayout>
</RelativeLayout>



