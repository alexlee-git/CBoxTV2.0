<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">


    <LinearLayout
        android:layout_width="@dimen/width_650px"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/width_1214px"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shooter_up"
            android:layout_width="@dimen/width_39px"
            android:layout_height="@dimen/height_21px"
            android:layout_marginTop="@dimen/height_20px"
            android:src="@drawable/shooter_indicator_up" />

        <tv.newtv.cboxtv.cms.mainPage.AiyaRecyclerView
            android:id="@+id/shooter_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_15px"
            android:layout_marginBottom="@dimen/height_15px"
            android:layout_weight="1"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:paddingLeft="@dimen/width_30px"
            android:paddingBottom="@dimen/height_8px"
        />

        <ImageView
            android:id="@+id/shooter_down"
            android:layout_width="@dimen/width_39px"
            android:layout_height="@dimen/height_21px"
            android:layout_marginBottom="@dimen/height_20px"
            android:src="@drawable/shooter_indicator" />
    </LinearLayout>

    <FrameLayout
        android:background="@drawable/selector_pos_background"
        android:id="@+id/video_player_rl"
        android:layout_width="@dimen/width_1122px"
        android:layout_height="@dimen/height_654px"
        android:layout_marginLeft="@dimen/width_100px"
        android:layout_marginStart="@dimen/width_89px"
        android:layout_marginTop="@dimen/height_380px">

        <tv.newtv.cboxtv.player.videoview.VideoPlayerView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </tv.newtv.cboxtv.player.videoview.VideoPlayerView>

    </FrameLayout>
</FrameLayout>