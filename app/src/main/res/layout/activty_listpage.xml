<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_width="@dimen/width_362px"
        android:layout_height="match_parent">

        <!--<ImageView-->
        <!--android:layout_width="@dimen/width_77px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/page_left"-->
        <!--android:focusable="false" />-->

        <!--<ImageView-->
        <!--android:layout_width="@dimen/width_286px"-->
        <!--android:layout_height="@dimen/height_68px"-->
        <!--android:layout_marginLeft="@dimen/width_77px"-->
        <!--android:layout_marginTop="@dimen/height_151px"-->
        <!--android:focusable="false" />-->

        <!--<ImageView-->
        <!--android:layout_width="@dimen/width_240px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="@dimen/width_122px"-->
        <!--android:background="@drawable/page_right"-->
        <!--android:focusable="false" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_4px"
            android:background="@drawable/list_left_bg"
            android:focusable="false" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_60px"
            android:layout_marginLeft="@dimen/width_120px"
            android:layout_marginTop="@dimen/height_72px"
            android:focusable="false"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/listpage_img_mark"
                android:layout_width="@dimen/width_4px"
                android:layout_height="@dimen/height_46px"
                android:layout_centerVertical="true"
                android:layout_margin="5px"
                android:scaleType="fitXY"
                android:src="@drawable/film_mark" />

            <TextView
                android:id="@+id/listpage_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/listpage_img_mark"
                android:gravity="center|left"
                android:text="电影"
                android:textColor="@color/detail_tvcolor"
                android:textSize="@dimen/height_46px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/listpage_rel_screen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_50px"
            android:layout_marginLeft="@dimen/width_130px"
            android:layout_marginTop="@dimen/height_124px"
            android:focusable="false"
            android:visibility="gone"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/listpage_img_rearch"
                android:layout_width="@dimen/width_40px"
                android:layout_height="@dimen/height_40px"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/screen" />

            <TextView
                android:id="@+id/listpage_rel_screen_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/width_10px"
                android:layout_toRightOf="@id/listpage_img_rearch"
                android:gravity="center_vertical"
                android:text="@string/listpage_screen"
                android:textColor="#ededed"
                android:textSize="@dimen/height_36px" />
        </RelativeLayout>

        <tv.newtv.cboxtv.cms.listPage.view.ListMenuView
            android:id="@+id/listpage_recycle_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/height_30px"
            android:layout_marginLeft="@dimen/width_77px"
            android:layout_marginTop="@dimen/height_219px"
            android:divider="@null"
            android:dividerHeight="@dimen/height_20px"
            android:focusable="true"
            android:listSelector="@drawable/menufouse"
            android:scrollbars="none">

        </tv.newtv.cboxtv.cms.listPage.view.ListMenuView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_408px"
        android:layout_marginTop="@dimen/height_88px">

        <TextView
            android:id="@+id/listpage_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/detail_tvcolor"
            android:textSize="@dimen/height_30px" />

        <TextView
            android:id="@+id/listpage_tv_totalpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_40px"
            android:layout_toRightOf="@id/listpage_tv_total"
            android:textColor="@color/detail_tvcolor"
            android:textSize="@dimen/height_30px" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/listpage_rel_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_300px"
        android:layout_marginLeft="@dimen/width_386px"
        android:layout_marginTop="@dimen/height_142px"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/listpage_img_error"
            android:layout_width="@dimen/width_40px"
            android:layout_height="@dimen/height_40px"
            android:layout_centerVertical="true"
            android:layout_margin="20px"
            android:src="@drawable/listpage_error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/listpage_img_error"
            android:text="暂无相关内容,请更换选择条件"
            android:textColor="#ea6617"
            android:textSize="@dimen/height_32px" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/listpage_rel_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_300px"
        android:layout_marginLeft="@dimen/width_386px"
        android:layout_marginTop="@dimen/height_142px"
        android:gravity="center"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/loading"
            android:textColor="@color/colorRecommedPosText"
            android:textSize="@dimen/height_32px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listpage_rel_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/width_386px"
        android:layout_marginTop="@dimen/height_140px"
        android:clipChildren="false"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listpage_recycle_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/height_10px"
            android:layout_marginRight="@dimen/width_120px"
            android:clipChildren="false"
            android:clipToPadding="false">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listpage_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/height_10px"
            android:layout_marginRight="@dimen/width_120px"
            android:clipChildren="false"
            android:clipToPadding="false">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>



