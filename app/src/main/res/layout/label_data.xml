<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/focusLayout"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    >


    <ImageView
        android:id="@+id/label_img"
        android:layout_width="@dimen/width_240px"
        android:layout_height="@dimen/height_360px"
        android:src="@mipmap/ic_launcher"
        android:focusable="false"
        android:scaleType="fitXY"
        />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/focus"
        android:layout_width="@dimen/width_306px"
        android:layout_height="@dimen/height_426px"
        android:background="@drawable/pos_zui"
        android:focusable="false"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="@dimen/width_240px"
        android:layout_height="@dimen/height_50px"
        android:layout_marginRight="@dimen/width_17dp"
        android:layout_marginTop="@dimen/height_401px"
        android:layout_marginLeft="@dimen/width_17dp"
        android:layout_marginBottom="@dimen/height_23px"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="center"
        android:textSize="@dimen/height_28px"
        android:textColor="#ffffff"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" />

    <!-- 剧集更新标题-->
    <TextView
        android:id="@+id/label_num"
        style="@style/ModulePosterProgramUpdateTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_30px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/width_39px"
        android:layout_marginTop="@dimen/height_360px"
        android:background="#99000000"
        android:includeFontPadding="false"
        android:visibility="invisible"/>
    <!--评分-->
    <TextView
        android:id="@+id/label_grade"
        style="@style/ModulePosterScoreTitleStyle"
        android:layout_width="@dimen/width_40px"
        android:layout_height="@dimen/height_30px"
        android:layout_marginLeft="@dimen/width_220px"
        android:layout_marginTop="@dimen/height_350px"
        android:background="#99000000"
        android:includeFontPadding="false"
        android:visibility="invisible" />

</FrameLayout>



