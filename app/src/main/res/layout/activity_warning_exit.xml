<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exit_transparent_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/focus_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_210px"
        android:background="@drawable/selector_pos_background_27px"
        android:focusable="true">

        <tv.newtv.cboxtv.views.custom.RecycleImageView
            android:id="@+id/exit_image"
            android:layout_width="@dimen/width_816px"
            android:layout_height="@dimen/height_480px"
            android:scaleType="fitXY" />
    </FrameLayout>

    <TextView
        android:id="@+id/ask_to_exit"
        android:layout_width="@dimen/width_816px"
        android:layout_height="@dimen/height_45px"
        android:layout_marginTop="@dimen/height_20px"
        android:gravity="center"
        android:text="@string/ask_exit_app"
        android:textColor="@color/detail_tvcolor"
        android:textSize="@dimen/height_36px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_49px"
        android:clipChildren="false"
        android:clipToPadding="false">

        <Button
            android:id="@+id/okButton"
            android:layout_width="@dimen/width_388px"
            android:layout_height="@dimen/height_100px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/width_472px"
            android:background="@drawable/exit_button_status"
            android:focusable="true" />


        <Button
            android:id="@+id/cancelButton"
            android:layout_width="@dimen/width_388px"
            android:layout_height="@dimen/height_100px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/width_472px"
            android:background="@drawable/exit_see_status" />

    </RelativeLayout>

</LinearLayout>
