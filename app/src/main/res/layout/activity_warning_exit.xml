<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@drawable/exit_transparent_background"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <tv.newtv.cboxtv.views.custom.RecycleImageView
        android:id="@+id/exit_image"
        android:layout_marginTop="@dimen/height_210px"
        android:layout_width="@dimen/width_816px"
        android:layout_height="@dimen/height_480px"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/like_tv"
        android:layout_width="@dimen/width_816px"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_18px"
        android:gravity="center_vertical"
        android:text="@string/guess_like_watch"
        android:textColor="@color/detail_tvcolor"
        android:textSize="@dimen/height_32px"
        android:visibility="gone" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/guess_like_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_20px"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ask_to_exit"
        android:layout_width="@dimen/width_816px"
        android:layout_height="@dimen/height_45px"
        android:layout_marginTop="@dimen/height_20px"
        android:gravity="center"
        android:text="@string/ask_exit_app"
        android:textColor="@color/detail_tvcolor"
        android:textSize="@dimen/height_36px" />

    <LinearLayout
        android:layout_width="@dimen/width_976px"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_49px"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okButton"
            android:layout_width="@dimen/width_388px"
            android:layout_height="@dimen/height_100px"
            android:layout_marginRight="@dimen/height_20px"
            android:background="@drawable/exit_button_status"
            android:focusable="true" />



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60px"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="@dimen/width_388px"
            android:layout_height="@dimen/height_100px"
            android:layout_marginLeft="@dimen/height_20px"
            android:background="@drawable/exit_see_status"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
