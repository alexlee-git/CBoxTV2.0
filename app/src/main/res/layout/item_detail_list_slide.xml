<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_height="wrap_content">

    <tv.newtv.cboxtv.views.custom.CurrentPlayImageView
        android:id="@+id/id_module_8_title_icon"
        android:layout_width="@dimen/width_17px"
        android:layout_height="@dimen/height_17px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_56px"
        android:background="@drawable/tuoyuan"
        android:tag="module_008_title_icon"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/id_module_8_title"
        style="@style/ModuleTitleStyle"
        android:layout_width="@dimen/width_374px"
        android:layout_height="@dimen/height_34px"
        android:layout_marginLeft="@dimen/width_6px"
        android:layout_marginTop="@dimen/height_47px"
        android:layout_toRightOf="@id/id_module_8_title_icon"
        android:includeFontPadding="false"
        android:tag="module_008_title"
        android:visibility="gone"/>

    <ImageView
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:id="@+id/iv_left"
        android:layout_width="@dimen/width_20px"
        android:layout_height="@dimen/height_35px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/width_40px"
        android:background="@drawable/icon_detail_tips_left" />

    <tv.newtv.cboxtv.cms.mainPage.AiyaRecyclerView
        android:paddingTop="@dimen/height_24px"
        android:layout_marginRight="@dimen/width_90px"
        android:layout_marginLeft="@dimen/width_87px"
        android:id="@+id/air_side"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_below="@+id/id_module_8_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </tv.newtv.cboxtv.cms.mainPage.AiyaRecyclerView>

    <ImageView
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:id="@+id/iv_right"
        android:layout_width="@dimen/width_20px"
        android:layout_height="@dimen/height_35px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/width_40px"
        android:background="@drawable/icon_detail_tips_right" />


</RelativeLayout>