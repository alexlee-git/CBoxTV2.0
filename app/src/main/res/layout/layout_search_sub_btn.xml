<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/search_num_bg">

    <LinearLayout
        android:layout_width="@dimen/width_414px"
        android:layout_height="@dimen/height_80px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_66px"
        android:background="@drawable/search_title_bg"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_30px"
            android:layout_height="@dimen/height_30px"
            android:layout_marginLeft="@dimen/width_29px"
            android:background="@drawable/search_icon"/>

        <TextView
            android:id="@+id/sub_txt_input"
            style="@style/StyleSearchKeyBoardTitle"
            android:layout_width="@dimen/width_324px"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/width_31px"
            android:gravity="center|left"
            android:hint="@string/search_keybroad_input"
            android:maxLength="10"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/sub_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:visibility="invisible"
            android:id="@+id/sub_btn_3"
            android:layout_width="@dimen/width_130px"
            android:layout_height="@dimen/height_130px"
            android:layout_marginLeft="@dimen/width_267px"
            android:layout_marginTop="@dimen/height_475px"
            android:background="@drawable/search_keyboard_btn"
            android:text="3"
            android:textColor="#ededed"
            android:textSize="@dimen/height_45px"/>

        <Button
            android:visibility="invisible"
            android:id="@+id/sub_btn_1"
            android:layout_width="@dimen/width_130px"
            android:layout_height="@dimen/height_130px"
            android:layout_marginLeft="@dimen/width_267px"
            android:layout_marginTop="@dimen/height_321px"
            android:background="@drawable/search_keyboard_btn"
            android:text="1"
            android:textColor="#ededed"
            android:textSize="@dimen/height_45px"/>

        <Button
            android:visibility="invisible"
            android:id="@+id/sub_btn_2"
            android:layout_width="@dimen/width_130px"
            android:layout_height="@dimen/height_130px"
            android:layout_marginLeft="@dimen/width_113px"
            android:layout_marginTop="@dimen/height_475px"
            android:background="@drawable/search_keyboard_btn"
            android:text="2"
            android:textColor="#ededed"
            android:textSize="@dimen/height_45px"/>


        <Button
            android:visibility="invisible"
            android:id="@+id/sub_btn_5"
            android:layout_width="@dimen/width_130px"
            android:layout_height="@dimen/height_130px"
            android:layout_marginLeft="@dimen/width_267px"
            android:layout_marginTop="@dimen/height_629px"
            android:background="@drawable/search_keyboard_btn"
            android:text="5"
            android:textColor="#ededed"
            android:textSize="@dimen/height_45px"/>

        <Button
            android:visibility="invisible"
            android:id="@+id/sub_btn_4"
            android:layout_width="@dimen/width_130px"
            android:layout_height="@dimen/height_130px"
            android:layout_marginLeft="@dimen/width_421px"
            android:layout_marginTop="@dimen/height_475px"
            android:background="@drawable/search_keyboard_btn"
            android:text="4"
            android:textColor="#ededed"
            android:textSize="@dimen/height_45px" />


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_64px"
        android:layout_marginBottom="@dimen/height_50px"
        android:layout_marginLeft="@dimen/width_120px"
        android:layout_marginTop="@dimen/height_966px"
        android:gravity="center|left"
        android:text="@string/search_keybroad_show"
        android:textColor="#ededed"
        android:textSize="@dimen/height_27px"
        />
</FrameLayout>

