<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_marginLeft="@dimen/_height_13px"
        android:layout_centerInParent="true"
        android:id="@+id/id_module_view"
        android:layout_width="@dimen/width_306px"
        android:layout_height="@dimen/height_483px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_15px"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:tag="cell_008_1"
        android:visibility="gone">

        <tv.newtv.cboxtv.views.custom.RecycleImageView
            android:src="@drawable/focus_240_360"
            android:layout_width="@dimen/width_240px"
            android:layout_height="@dimen/height_360px"
            android:layout_marginLeft="@dimen/width_33px"
            android:layout_marginTop="@dimen/height_33px"
            android:tag="tag_poster_image" />

        <ImageView
            android:layout_width="@dimen/width_306px"
            android:layout_height="@dimen/height_426px"
            android:background="@drawable/pos_zui"
            android:tag="tag_img_focus"
            android:visibility="invisible" />

        <TextView
            style="@style/ModulePosterBottomTitleStyle"
            android:layout_width="@dimen/width_240px"
            android:layout_height="@dimen/height_32px"
            android:layout_marginLeft="@dimen/width_33px"
            android:layout_marginTop="@dimen/height_417px"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:tag="tag_poster_title" />

    </FrameLayout>

</RelativeLayout>