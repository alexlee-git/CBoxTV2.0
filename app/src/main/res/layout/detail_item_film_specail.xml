<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/film_special_item"
    android:layout_width="@dimen/width_320px"
    android:layout_height="@dimen/height_270px"
    android:focusable="true">


    <ImageView
        android:id="@+id/item_detail_img"
        android:layout_width="@dimen/width_240px"
        android:layout_height="@dimen/height_136px"
        android:layout_marginLeft="@dimen/width_24px"
        android:layout_marginRight="@dimen/width_24px"
        android:layout_marginTop="@dimen/height_24px"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/focus_240_162" />

    <ImageView
        android:id="@+id/item_detail_img_foused"
        android:layout_width="@dimen/width_280px"
        android:layout_height="@dimen/height_176px"
        android:layout_marginLeft="@dimen/width_4px"
        android:layout_marginRight="@dimen/width_4px"
        android:layout_marginTop="@dimen/height_4px"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/fousehdetail"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_detail_tv_time"
        android:layout_width="@dimen/width_230px"
        android:layout_height="@dimen/height_36px"
        android:layout_marginLeft="@dimen/width_24px"
        android:layout_marginRight="@dimen/width_24px"
        android:layout_marginTop="@dimen/height_130px"
        android:focusable="false"
        android:gravity="right|bottom"
        android:text="00:00:00"
        android:textColor="@color/detail_tvcolor"
        android:textSize="@dimen/height_24px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_detail_tv_name"
        android:layout_width="@dimen/width_240px"
        android:layout_height="@dimen/height_60px"
        android:layout_marginLeft="@dimen/width_24px"
        android:layout_marginRight="@dimen/width_24px"
        android:layout_marginTop="@dimen/height_160px"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="电影名称"
        android:textColor="@color/detail_tvcolor"
        android:textSize="@dimen/height_24px" />

</FrameLayout>


