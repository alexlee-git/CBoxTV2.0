<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="@dimen/width_1440px"
        android:layout_height="@dimen/height_552px"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/userinfo_set_clearcache_bg"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_clearcache_start"
            android:layout_width="@dimen/width_1440px"
            android:layout_height="match_parent"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_120px"
                android:gravity="center"
                android:text="您确定清除缓存吗？"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/height_32px" />

            <TextView
                android:id="@+id/tv_pop_cache_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_35px"
                android:gravity="center"
                android:text="当前0.0MB"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/height_28px" />

            <LinearLayout
                android:layout_width="@dimen/width_1440px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_clear_cache"
                    android:layout_width="@dimen/height_460px"
                    android:layout_height="@dimen/height_100px"
                    android:layout_marginRight="@dimen/width_220px"
                    android:background="@drawable/userinfo_set_clearcache_btn"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusRight="@+id/tv_clear_cancel"
                    android:text="清除缓存"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/height_36px" />

                <TextView
                    android:id="@+id/tv_clear_cancel"
                    android:layout_width="@dimen/height_460px"
                    android:layout_height="@dimen/height_100px"
                    android:background="@drawable/userinfo_set_cancel_btn"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusLeft="@+id/tv_clear_cache"
                    android:text="取消"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/height_36px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_clearcache_finish"
            android:layout_width="@dimen/width_1440px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_120px"
                android:gravity="center"
                android:text="清除缓存成功！"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/height_32px" />

            <TextView
                android:id="@+id/tv_confirm_timer"
                android:layout_width="@dimen/height_460px"
                android:layout_height="@dimen/height_100px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_165px"
                android:background="@drawable/userinfo_set_clearcache_btn"
                android:focusable="true"
                android:gravity="center"
                android:text="确定(5s)"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/height_36px" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>