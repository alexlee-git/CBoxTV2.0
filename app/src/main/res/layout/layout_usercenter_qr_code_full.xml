<?xml version="1.0" encoding="utf-8"?><!-- 二维码点击放大的布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_black_90">

    <!--二维码框 -->
    <FrameLayout
        android:id="@+id/layout_usercenter_full_screen_qr_root"
        android:layout_width="@dimen/width_666px"
        android:layout_height="@dimen/height_784px"
        android:layout_centerInParent="true"
        android:background="@drawable/usercenter_login_qrcode_bg"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="@dimen/width_627px"
            android:layout_height="@dimen/height_627px"
            android:layout_marginEnd="@dimen/width_17px"
            android:layout_marginLeft="@dimen/width_22px"
            android:layout_marginRight="@dimen/width_17px"
            android:layout_marginStart="@dimen/width_22px"
            android:layout_marginTop="@dimen/height_22px"
            android:background="@drawable/activity_login_qr_inside_back"/>

        <ImageView
            android:id="@+id/layout_usercenter_img_qrcode"
            android:layout_width="@dimen/width_607px"
            android:layout_height="@dimen/height_607px"
            android:layout_marginEnd="@dimen/width_32px"
            android:layout_marginLeft="@dimen/width_37px"
            android:layout_marginRight="@dimen/width_32px"
            android:layout_marginStart="@dimen/width_37px"
            android:layout_marginTop="@dimen/height_37px"/>

        <ImageView
            android:id="@+id/usercenter_full_screen_qr_scan_icon"
            android:layout_width="@dimen/width_75px"
            android:layout_height="@dimen/height_76px"
            android:layout_marginLeft="@dimen/width_67px"
            android:layout_marginStart="@dimen/width_67px"
            android:layout_marginTop="@dimen/height_681px"
            android:background="@drawable/member_qr_scan_icon_v2"/>
        <!-- 会员中心二维码扫描提醒上标题 -->
        <TextView
            android:id="@+id/usercenter_full_screen_qr_top_title"
            style="@style/MemberCenterQrFullScreenTopTitleStyle"
            android:layout_width="@dimen/width_439px"
            android:layout_height="@dimen/height_34px"
            android:layout_marginLeft="@dimen/width_160px"
            android:layout_marginStart="@dimen/width_160px"
            android:layout_marginTop="@dimen/height_681px"
            android:includeFontPadding="false"
            android:text="@string/usercenter_login_scan_phone"/>
        <!-- 会员中心二维码扫描提醒下标题 -->
        <TextView
            android:id="@+id/usercenter_full_screen_qr_bottom_title"
            style="@style/MemberCenterQrFullScreenBottomTitleStyle"
            android:layout_width="@dimen/width_439px"
            android:layout_height="@dimen/height_32px"
            android:layout_marginLeft="@dimen/width_160px"
            android:layout_marginStart="@dimen/width_160px"
            android:layout_marginTop="@dimen/height_724px"
            android:includeFontPadding="false"
            android:text="@string/usercenter_login_scan_quest_tv"/>
    </FrameLayout>
</RelativeLayout>

