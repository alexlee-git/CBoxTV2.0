<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tv.newtv.cboxtv.cms.PosterViewGroup
        android:id="@+id/poster_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        tv:poster_width="@dimen/width_240px"
        tv:poster_height="@dimen/height_162px"
        android:padding="@dimen/width_33px"
        tv:title_width="0px"
        tv:title_height="0px"
        tv:title_visible="GONE"
        tv:title_gravity="center"
        tv:poster_title_spaceing="0px"
        tv:angle_padding="@dimen/width_12px"
        tv:angle_left_top_width="@dimen/width_51px"
        tv:angle_left_top_height="@dimen/height_29px"
        tv:angle_right_top_width="@dimen/width_51px"
        tv:angle_right_top_height="@dimen/height_29px"
        tv:angle_title_width="@dimen/width_150px"
        tv:angle_title_height="@dimen/height_38px"
        tv:angle_sub_title_width="@dimen/width_80px"
        tv:angle_sub_title_height="@dimen/height_33px"
        tv:angle_right_bottom_width="@dimen/width_51px"
        tv:angle_right_bottom_height="@dimen/height_29px"/>

    <tv.newtv.cboxtv.cms.PosterViewGroup
        android:id="@+id/poster_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_toRightOf="@id/poster_1"
        android:layout_marginLeft="@dimen/_width_18px"
        tv:poster_width="@dimen/width_1400px"
        tv:poster_height="@dimen/height_162px"
        android:padding="@dimen/width_33px"
        tv:title_width="0px"
        tv:title_height="0px"
        tv:title_visible="GONE"
        tv:title_gravity="center"
        tv:poster_title_spaceing="0px"
        tv:angle_padding="@dimen/width_12px"
        tv:angle_left_top_width="@dimen/width_51px"
        tv:angle_left_top_height="@dimen/height_29px"
        tv:angle_right_top_width="@dimen/width_51px"
        tv:angle_right_top_height="@dimen/height_29px"
        tv:angle_title_width="@dimen/width_150px"
        tv:angle_title_height="@dimen/height_38px"
        tv:angle_sub_title_width="@dimen/width_80px"
        tv:angle_sub_title_height="@dimen/height_33px"
        tv:angle_right_bottom_width="@dimen/width_51px"
        tv:angle_right_bottom_height="@dimen/height_29px"/>

</RelativeLayout>


