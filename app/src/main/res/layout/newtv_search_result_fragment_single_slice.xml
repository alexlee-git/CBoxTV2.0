<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_fragment_single_result_total"
        style="@style/StyleSearchResultListTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30px"
        android:layout_marginLeft="@dimen/width_24px"
        android:includeFontPadding="false"/>

    <tv.newtv.cboxtv.cms.search.custom.SearchRecyclerView
        android:id="@+id/id_search_result_single_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_fragment_single_result_total"
        android:layout_marginRight="@dimen/width_100px"/>

    <TextView
        android:id="@+id/id_search_result_single_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/search_result_empty"
        android:textColor="#ededed"
        android:textSize="@dimen/height_35px"
        android:visibility="gone"/>
</RelativeLayout>