    <!--android:layout_height="@dimen/height_144px"-->
    <!--android:layout_marginLeft="@dimen/width_17dp"-->
    <!--android:layout_marginTop="@dimen/height_250px"-->
    <!--android:background="@drawable/search_result_vertical_poster_txt_bg" />-->
</FrameLayout>