<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/dialog_frame_tv"
        android:layout_width="@dimen/width_114px"
        android:layout_height="@dimen/height_114px"
        android:focusable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_item_tv"
            android:layout_width="@dimen/width_90px"
            android:layout_height="@dimen/height_90px"
            android:layout_margin="12px"
            android:background="@drawable/imgpreiod"
            android:gravity="center"
            android:textColor="@color/detail_tvcolor"
            android:textSize="@dimen/height_30px" />

        <ImageView
            android:id="@+id/dialog_item_img_tv"
            android:layout_width="@dimen/width_35px"
            android:layout_height="@dimen/height_35px"
            android:layout_marginLeft="@dimen/width_68px"
            android:layout_marginTop="@dimen/height_12px"
            android:focusable="false"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/corner_vip" />

        <ImageView
            android:id="@+id/dialog_item_imgfouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/imgpreiodfouse"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dialog_frame_variety"
        android:layout_width="@dimen/width_900px"
        android:layout_height="@dimen/height_114px"
        android:focusable="true">

        <TextView
            android:id="@+id/dialog_item_variety"
            android:layout_width="@dimen/width_876px"
            android:layout_height="@dimen/height_90px"
            android:layout_margin="12px"
            android:background="@drawable/imgperiod2"
            android:gravity="center"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textColor="@color/detail_tvcolor"
            android:textSize="@dimen/height_30px" />

        <ImageView
            android:id="@+id/dialog_item_img_variety"
            android:layout_width="@dimen/width_35px"
            android:layout_height="@dimen/height_35px"
            android:layout_marginLeft="@dimen/width_853px"
            android:focusable="false"
            android:layout_marginTop="@dimen/height_12px"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/corner_vip" />

        <ImageView
            android:id="@+id/dialog_variety_imgfouse"
            android:layout_width="@dimen/width_900px"
            android:layout_height="@dimen/height_114px"
            android:focusable="false"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/imgproiedfouse2" />
    </FrameLayout>
</FrameLayout>


