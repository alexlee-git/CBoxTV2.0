<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/width_967px"
        android:layout_height="@dimen/height_544px"
        android:background="@drawable/version_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_48px"
            android:layout_marginTop="@dimen/width_28px"
            android:textColor="@color/color_font"
            android:textSize="@dimen/width_30px" />

        <TextView
            android:id="@+id/tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_48px"
            android:layout_marginTop="@dimen/width_28px"
            android:lineSpacingExtra="@dimen/width_10px"
            android:textColor="@color/color_font"
            android:textSize="@dimen/width_24px" />

        <TextView
            android:id="@+id/tv_up_info"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="@dimen/width_48px"
            android:layout_marginRight="@dimen/width_48px"
            android:layout_marginTop="@dimen/width_5px"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/width_10px"
            android:textColor="@color/color_font"
            android:textSize="@dimen/width_24px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_90px"
            android:layout_marginBottom="@dimen/height_30px"
            android:layout_marginLeft="@dimen/width_48px"
            android:layout_marginRight="@dimen/width_48px"
            android:layout_marginTop="@dimen/height_10px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_imate_up"
                    android:layout_width="@dimen/width_330px"
                    android:layout_height="@dimen/height_90px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/force_update"
                    android:focusable="true" />

                <ImageView
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_imate_latter"
                    android:layout_width="@dimen/width_330px"
                    android:layout_height="@dimen/height_90px"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/latter_up"
                    android:focusable="true" />



            </RelativeLayout>

            <LinearLayout
                android:id="@+id/liner_prograss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pb_prograss"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_19px"
                    android:progressDrawable="@drawable/pb_update" />

                <TextView
                    android:id="@+id/tv_prograss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_10px"
                    android:gravity="center"
                    android:textColor="@color/color_font"
                    android:textSize="@dimen/height_22px" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>