<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_256px"
    android:layout_height="@dimen/height_360px"
    android:focusable="true">
    <tv.newtv.cboxtv.views.custom.CurrentPlayImageViewWorldCup
        android:id="@+id/shooter_poster"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/height_33px"
        android:layout_marginTop="@dimen/height_33px"
        android:layout_width="@dimen/width_180px"
        android:layout_height="@dimen/height_284px"
        android:layout_marginStart="@dimen/height_33px"/>

    <ImageView
        android:id="@+id/shooter_poster_focus"
        android:layout_width="@dimen/width_246px"
        android:layout_height="@dimen/height_350px"
        android:background="@drawable/pos_zui"
        android:visibility="gone"/>
</FrameLayout>