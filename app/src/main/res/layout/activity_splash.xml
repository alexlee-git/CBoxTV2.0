<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/root_view"
                android:background="@drawable/splash_bg">

    <VideoView
        android:id="@+id/splash_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
    />

    <ImageView
        android:id="@+id/splash_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
    />

    <TextView
        android:id="@+id/count_down"
        android:padding="@dimen/height_10px"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_80px"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/width_50px"
        android:layout_marginTop="@dimen/height_50px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/width_50px"
        android:background="@drawable/count_down_background"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/height_40px"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/authing"
        android:padding="@dimen/height_10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/width_120px"
        android:layout_marginBottom="@dimen/height_57px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/width_120px"
        android:gravity="center"
        android:textColor="@color/color_authing"
        android:text="@string/auth_ing"
        android:alpha="0.75"
        android:textSize="@dimen/width_32px"
        android:visibility="visible"/>

</RelativeLayout>
